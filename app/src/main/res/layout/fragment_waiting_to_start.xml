<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:tag="FragmentWaitingToStart"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_title_of_quest"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="Тайны Петербурга"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/text"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:text="Привет! Ты принял участие в городском ориентировании. Что то там Что то там Что то там"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/text_title_of_quest"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/text_stage"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="До начала осталось:"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/text_time_from_start_quest"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="00:00:00"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/text_stage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
