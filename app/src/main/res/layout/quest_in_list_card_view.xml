<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quest_card_view"
        card_view:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Название квеста"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberOfQuest" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textColor="@android:color/black"
                android:layout_marginTop="8dp" android:layout_marginBottom="200dp"/>
        <View
                android:id="@+id/verticalLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/numberOfQuest"
                android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="Дата и время начала"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateOfQuest"
                app:layout_constraintTop_toTopOf="@+id/verticalLine" app:layout_constraintEnd_toStartOf="@+id/verticalLine"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textSize="12sp" android:gravity="right"/>
        <TextView
                android:text="Место проведения"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/placeOfQuest"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/dateOfQuest" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="12sp"
                android:gravity="right"/>
        <TextView
                android:text="Количество контрольных пунктов"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amountCpOfQuest"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/placeOfQuest"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textSize="12sp" android:gravity="right"/>
        <TextView
                android:text="16.02.2019 в 14:47"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateToStart"
                app:layout_constraintTop_toTopOf="@+id/verticalLine" app:layout_constraintStart_toEndOf="@+id/verticalLine"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:textSize="12sp"/>
        <TextView
                android:text="Выборгский район"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/placeToStart"
                app:layout_constraintStart_toEndOf="@+id/verticalLine"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/dateToStart" android:textSize="12sp"/>
        <TextView
                android:text="15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amountOfCp"
                app:layout_constraintStart_toEndOf="@+id/verticalLine"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="12sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/placeToStart" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/amountCpOfQuest"/>
        <Button
                android:text="Подать заявку"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/apply" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/amountCpOfQuest" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:textSize="12sp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine" android:layout_marginRight="8dp"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>